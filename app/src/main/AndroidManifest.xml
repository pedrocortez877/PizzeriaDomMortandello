<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pizzeriadommortandello">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PizzeriaDomMortandello">
        <activity android:name=".ui.activitys.MenuActivity" android:parentActivityName=".ui.activitys.MainActivity" />
        <activity android:name=".ui.activitys.RegisterPizzaActivity" android:parentActivityName=".ui.activitys.MainActivity" android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ui.activitys.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>